<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
  minWidth="-Infinity" prefHeight="780.0" prefWidth="1370.0"
  styleClass="application-background" xmlns="http://javafx.com/javafx/21.0.1"
  fx:controller="seng202.team6.gui.NotesController">
  <center>
    <HBox BorderPane.alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
        <TableView prefHeight="200.0" prefWidth="500.0" fx:id="notesTable">
          <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
          </HBox.margin>
          <columns>
            <TableColumn prefWidth="500.0" text="C1"/>
          </columns>
        </TableView>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="840.0">
          <HBox.margin>
            <Insets bottom="10.0" left="10.0" top="10.0"/>
          </HBox.margin>
          <children>
            <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="100.0" prefWidth="200.0">
              <children>
                <Label AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" text="No note selected"
                  fx:id="wineTitle">
                  <font>
                    <Font size="35.0"/>
                  </font>
                </Label>
              </children>
            </AnchorPane>
            <AnchorPane prefHeight="200.0" prefWidth="200.0">
              <children>
                <Button AnchorPane.rightAnchor="130.0" AnchorPane.topAnchor="10.0" mnemonicParsing="false"
                  onAction="#onDeleteClicked" styleClass="primary-button" text="Delete Note"
                  fx:id="deleteButton">
                  <font>
                    <Font size="15.0"/>
                  </font>
                  <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
                </Button>
                <Button AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" mnemonicParsing="false"
                  onAction="#onSaveClicked" styleClass="primary-button" text="Save Note"
                  fx:id="saveButton">
                  <font>
                    <Font size="15.0"/>
                  </font>
                  <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                  </padding>
                </Button>
              </children>
            </AnchorPane>
            <TextArea maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
              minWidth="-Infinity" prefHeight="600.0" prefWidth="830.0" styleClass="notes-area"
              wrapText="true" fx:id="noteArea"/>
          </children>
        </VBox>
      </children>
    </HBox>
  </center>
  <stylesheets>
    <URL value="@../css/detailed_view.css"/>
    <URL value="@../css/global.css"/>
  </stylesheets>
</BorderPane>
