<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<HBox xmlns:fx="http://javafx.com/fxml/1" spacing="15.0" xmlns="http://javafx.com/javafx/21.0.1"
  fx:controller="seng202.team6.gui.ListScreenController">
  <children>
    <TabPane focusTraversable="false" prefHeight="780.0" prefWidth="1040.0" stylesheets="@../css/tabs_pane.css"
      tabClosingPolicy="UNAVAILABLE" tabMinHeight="50.0" fx:id="listScreenTabs">
      <tabs>
        <Tab text="VIEWING &lt;LIST_NAME&gt;" fx:id="tabViewing">
          <content>
            <HBox>
              <children>
                <TableView focusTraversable="false" prefHeight="10000.0" prefWidth="100000.0"
                  fx:id="tableView">
                  <columns>
                    <TableColumn minWidth="-1.0" prefWidth="-1.0"/>
                  </columns>
                </TableView>
              </children>
            </HBox>
          </content>
        </Tab>
      </tabs>
    </TabPane>
    <TitledPane animated="false" collapsible="false" focusTraversable="false" prefHeight="780.0"
      prefWidth="318.0" stylesheets="@../css/titled_pane.css" text="Lists">
      <content>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="50.0">
          <children>
            <ScrollPane VBox.vgrow="ALWAYS" focusTraversable="false" hbarPolicy="NEVER"
              pickOnBounds="false" prefHeight="20000.0" stylesheets="@../css/scroll_pane.css">
              <content>
                <VBox alignment="CENTER" fillWidth="false" maxHeight="1.7976931348623157E308"
                  minWidth="200.0" prefWidth="273.0" spacing="10.0"
                  fx:id="buttonList"/>
              </content>
            </ScrollPane>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
              <children>
                <Button focusTraversable="false" mnemonicParsing="false"
                  onAction="#onCreateListRequestButton" prefHeight="33.0" prefWidth="167.0"
                  styleClass="secondary-button" stylesheets="@../css/global.css" text="Create List"
                  fx:id="createListRequestButton">
                  <font>
                    <Font name="System Bold" size="16.0"/>
                  </font>
                </Button>
                <Button focusTraversable="false" mnemonicParsing="false"
                  onAction="#onDeleteListRequestButton" prefHeight="33.0" prefWidth="167.0"
                  styleClass="secondary-button" stylesheets="@../css/global.css" text="Delete List"
                  fx:id="deleteListRequestButton">
                  <font>
                    <Font name="System Bold" size="16.0"/>
                  </font>
                </Button>
              </children>
            </VBox>
          </children>
        </VBox>
      </content>
      <font>
        <Font name="System Bold" size="24.0"/>
      </font>
    </TitledPane>
  </children>
</HBox>
